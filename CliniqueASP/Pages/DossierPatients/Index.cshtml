@page
@model Clinique.Pages.DossierPatients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<body style="background-color:lightgrey;">
    
</body>

<div>
<div class="container">
    <div>
        <div class="col-md-2 mb-2">
            <a asp-page="Create" class="btn btn-primary mt-3"> Nouveau dossier patient</a>
        </div>

<div class="row mt-2 mb-2">
<form>
   <div class="input-group">
        <input type="search" asp-for="SearchString" placeholder="Rechercher par Nom"  class="form-control">
        <button type="submit" class="btn btn-primary m-2">Rechercher</button>
    
    </div>
</form>
</div>
    </div>
<p>
    <a asp-page="Create"></a>
</p>


</div>


<hr>
<hr>
<h2 class="justify-content-center d-flex center mb-4">Liste des patients</h2>
<table class="table table-striped table-gray">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Sexe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DossierPatient[0].ConsultationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DossierPatient) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultationDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Code" class="btn btn-dark">Editer</a> |
                <a asp-page="./Details" asp-route-id="@item.Code" class="btn btn-info style ">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Code" class="btn btn-danger">Effacer</a>
            </td>
        </tr>
}
    </tbody>
</table>
