<h2 class="justify-content-center d-flex center mb-4">Liste des medecins</h2>

<table class="table table-striped table-gray">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].MedecinId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Sexe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin[0].Specialite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Medecin) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedecinId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialite)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MedecinId" class="btn btn-dark">Editer</a> |
                <a asp-page="./Details" asp-route-id="@item.MedecinId" class="btn btn-info style">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MedecinId" class="btn btn-danger">Effacer</a>
            </td>
        </tr>
}
    </tbody>
</table>
